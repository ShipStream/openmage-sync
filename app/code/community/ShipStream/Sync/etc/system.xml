<?xml version="1.0"?>
<config>
    <sections>
        <shipping>
            <groups>
                <shipstream translate="label" module="shipstream">
                    <label>ShipStream Sync</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <realtime_sync translate="label comment">
                            <label>Enable Real-Time Order Sync</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Auto sync with ShipStream when the order status is changed to <em>Ready to Ship</em>.]]></comment>
                        </realtime_sync>
                    </fields>
                    <fields>
                        <send_shipment_email translate="label comment">
                            <label>Send New Shipment Email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Automatically send New Shipment email to the customer when a Shipment is fulfilled by ShipStream]]></comment>
                        </send_shipment_email>
                    </fields>
                </shipstream>
            </groups>
        </shipping>
    </sections>
</config>
